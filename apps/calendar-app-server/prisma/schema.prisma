datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model EntryType {
  createdAt   DateTime    @default(now())
  description String?
  id          String      @id @default(cuid())
  name        String?
  timeEntries TimeEntry[]
  updatedAt   DateTime    @updatedAt
}

model TimeEntry {
  calendar    Calendar?  @relation(fields: [calendarId], references: [id])
  calendarId  String?
  createdAt   DateTime   @default(now())
  date        DateTime?
  description String?
  entryType   EntryType? @relation(fields: [entryTypeId], references: [id])
  entryTypeId String?
  hoursWorked Float?
  id          String     @id @default(cuid())
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model Calendar {
  createdAt   DateTime    @default(now())
  date        DateTime?
  id          String      @id @default(cuid())
  timeEntries TimeEntry[]
  updatedAt   DateTime    @updatedAt
  user        User?       @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  calendars   Calendar[]
  createdAt   DateTime    @default(now())
  email       String?     @unique
  firstName   String?
  id          String      @id @default(cuid())
  lastName    String?
  password    String
  roles       Json
  timeEntries TimeEntry[]
  updatedAt   DateTime    @updatedAt
  username    String      @unique
}
